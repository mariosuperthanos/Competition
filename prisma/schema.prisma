generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String  @id @default(uuid())
  name          String
  email         String  @unique
  password      String  @unique
  // hostedEvents  Event[] @relation("UserEvents")
  // plannedEvents Event[] @relation("Attendees")
}

model Event {
  id          String   @id @default(uuid())
  title       String
  // hosts       User[]   @relation("UserEvents")
  description String
  date        String
  startHour   String
  finishHour  String
  country     String
  city        String
  lat         Float
  lng         Float
  // attendees   User[]   @relation("Attendees")
}
