generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid())
  name          String
  email         String         @unique
  password      String         @unique
  hostedEvents  Event[]        @relation("UserEvents")
  // plannedEvents Event[] @relation("Attendees")
  notifications Notification[]
}

model Event {
  id          String @id @default(uuid())
  title       String @unique
  hosts       User[] @relation("UserEvents")
  description String
  date        String
  startHour   String
  finishHour  String
  country     String
  city        String
  lat         Float
  lng         Float
  slug        String @unique
  timezone    String
  // attendees   User[]   @relation("Attendees")
}

model Notification {
  id      String @id @default(uuid())
  title   String
  message String
  date    String
  purpose String
  read    Boolean @default(false)
  userId  String
  user    User   @relation(fields: [userId], references: [id])
}
